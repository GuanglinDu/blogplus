<h2>Show a Comment</h2>
<p>Find me at app/views/comments/show.html.erb</p>

<!-- This is very wierd: form_for([@comment.post, @comment]) -->
<%= form_for([@comment.post, @comment]) do |f| %>
  <p>
    <%= f.label :commenter %><br />
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body, rows: 6 %>
  </p>
<% end %>

<div>
  <p><%= link_to 'Back to Post', post_path(@post) %> | <%= link_to "Home", controller: "welcome" %></p>
</div>

